@model Clothes_2.Web.Models.ChiTietHoaDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ChiTietHoaDon</h4>
<hr />
<h5>Danh sách sản phẩm</h5>
<ul>
@foreach(var item in Model.GioHangs)
{
    <li>
        img: @item.SanPham.image
        <br>
        Tên: @item.SanPham.TenSanPham
        <br>
        Số lượng: @item.SoLuong
        <br>
        Giá/sản phẩm: @item.SanPham.Gia
    </li>
}
</ul>
Thành tiền: @Html.DisplayFor(Model=>Model.ThanhTien);
<h5>Thông tin khách hàng</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label"></label>
                <input class="form-control" name="TenKhachHang" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label"></label>
                <input class="form-control" name="SoDienThoai" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input class="form-control" name="DiaChi" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
